@model List<Heros,Fruits> 



    <style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>


  <table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Ability</th>
    <th>Description</th>
  </tr>
    @foreach (var v in Model)
    {
        <tr>
        <td>@v.id</td>
        <td>@v.name</td>
        <td>@v.ability</td>
        <td>@v.description</td>
      </tr>
            
    }
 
</table>


